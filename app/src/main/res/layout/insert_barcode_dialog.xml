<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_barcode"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input_barcode"
        android:layout_marginTop="21dp"
        android:text="Input Barcode"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/input_barcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Barcode"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit_barcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_barcode"
        android:layout_alignStart="@+id/input_barcode"
        android:layout_below="@+id/input_barcode"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="19dp"
        android:background="?attr/colorAccent"
        android:text="Submit" />
</RelativeLayout>